<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/background_title"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivSoftwarePassword"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:contentDescription="@string/desc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/signPassword"
            android:textColor="@color/font_color_white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="70dip"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <!-- 开关手势密码 -->
	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/background_gray"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="70"
                android:gravity="left|center_vertical"
                android:text="@string/signPassword"
                android:textColor="@color/font_color_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="30"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <com.macrovideo.pull.lib.CheckSwitchButton
                    android:id="@+id/btnSoftwarePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/background_gray"
            android:visibility="visible" />
        <!-- 创建或删除手势密码 -->

        <LinearLayout
            android:id="@+id/llFoundAndDeletePassword"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvFoundAndDeletePassword"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="70"
                android:gravity="left|center_vertical"
                android:text="@string/foundSoftwarePassword"
                android:textColor="@color/font_color_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="30"
                android:gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/background_gray"
            android:visibility="visible" />
        <!-- 修改手势密码 -->

        <LinearLayout
            android:id="@+id/llAlterPassoword"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="70"
                android:gravity="left|center_vertical"
                android:text="@string/modify_password"
                android:textColor="@color/font_color_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="30"
                android:gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_gravity="right|center_vertical"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/arrow_selector" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/background_gray"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>