<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/font_color_white"
    tools:context="com.alpha.live.MainActivity" >

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/background_title"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivWeChatPayBack"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_wechat_payment_order"
            android:textColor="@color/font_color_white"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:contentDescription="@string/desc"
            android:src="@drawable/fresh_image"
            android:visibility="invisible" />
    </LinearLayout>
    
   
 
 
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
         >
    
   
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_centerInParent="true"
         android:layout_marginBottom="50dp" >
     
     <ImageView 
         android:id="@+id/wechat_icon"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:background="@drawable/wechat_payment_icon"
         android:layout_gravity="center"
          />
   <!-- android:text="If you have not successfully jumped, please click on the payment manually"  Confirm payment  WeChat payment order-->  
       <TextView
        android:id="@+id/tv_prepay_id"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/str_wechat_payment_tip"
        android:gravity="center_horizontal"
        android:textColor="@color/font_color_black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
          >
       </TextView>
       <Button 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/str_wechat_confirm_payment"
        android:textSize="19sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/new_btn_bg_selector"
        android:gravity="center"
        android:textColor="@color/font_color_white"
        android:layout_marginTop="50dp"
        android:id="@+id/bt_corfirm"/>
    </LinearLayout>
    
    </RelativeLayout>
   
</LinearLayout>
