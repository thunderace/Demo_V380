<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_login_exit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/selector_help_item"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_weight="3"
            android:paddingLeft="25dp"
            android:src="@drawable/icon_exit_login" />
        

        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/str_login_exit"
            android:textColor="@color/font_color_black"
            android:textSize="18dp" >
        </TextView>
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_gray_light"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <LinearLayout
        android:id="@+id/ll_app_exit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/selector_help_item"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_weight="3"
            android:paddingLeft="25dp"
            android:src="@drawable/icon_exit_software" />
        

        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/str_app_exit"
            android:textColor="@color/font_color_black"
            android:textSize="18dp" >
        </TextView>
    </LinearLayout>

</LinearLayout>