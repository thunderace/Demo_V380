            android:background="#b9b9b9" />
    </RelativeLayout>
    -->

    <TextView
        android:id="@+id/txt_Remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/str_register_remark"
        android:textColor="@color/background_gray"
        android:visibility="gone" />

    <!-- 顶部手机号码显示 -->

    <LinearLayout
        android:id="@+id/phoneNo_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/phoneNO_view_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_enter"
            android:textColor="@color/font_color_blue" />

        <TextView
            android:id="@+id/phoneNO_view_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" null "
            android:textColor="@color/font_color_blue" />

        <TextView
            android:id="@+id/phoneNO_view_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Receive_SMS_verify_code"
            android:textColor="@color/font_color_blue" />
    </LinearLayout>

    <!-- 验证码 -->

    <RelativeLayout
        android:id="@+id/et_verify_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/et_register_verify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_input"
            android:hint="@string/verify_code"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColorHint="#8b8b8b"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_get_verify_code"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/verification_code_send"
            android:text="@string/str_verify_code"
            android:textColor="#0085FF"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- 下一步按钮 -->

    <Button
        android:id="@+id/btn_register_next1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_btn_bg_selector"
        android:text="@string/The_next_step"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_register_next2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_btn_bg_selector"
        android:text="@string/The_next_step"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_register_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_btn_bg_selector"
        android:text="@string/str_register"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone" />
    <!-- 邮箱注册分割线 -->

    <Button
        android:id="@+id/btn_register_by_mailbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:text="@string/email_register"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_register_by_mobilephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:text="@string/phone_register"
        android:textSize="14sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/or"
            android:background="@color/background_gray" />

        <TextView
            android:id="@+id/or"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="or" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/or"
            android:background="@color/background_gray" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_change_register_way"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_mailbox_register"
        android:text="@string/str_mailbox_register"
        android:textColor="@color/font_color_blue"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>