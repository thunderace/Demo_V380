<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >
    
    <ImageView 
        android:id="@+id/iv_auto_bind"
        android:layout_width="264dp"
        android:layout_height="60dp"
        android:background="@drawable/auto_bind_service"
        />
    
    <LinearLayout 
        android:layout_below="@id/iv_auto_bind"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_half_round_corner"
        >
        
        
        <TextView 
            android:id="@+id/tv_auto_bind_service_tip"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/str_auto_bind_service_tip"
           android:textSize="16sp"
           android:textColor="@android:color/black"
           android:gravity="center"
           android:padding="20dp"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:baselineAligned="false"
            >
            
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <Button 
                    android:id="@+id/btn_ignore_auto_bind"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_centerInParent="true"
                    android:text="@string/str_ignore_auto_bind"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:background="@null"
                    />
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <Button 
                    android:id="@+id/btn_auto_bind"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/str_auto_bind_service_now"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:background="@drawable/new_btn_bg_selector"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
