<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/background_title"
        android:gravity="center" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center"
            android:text="@string/passwordHint"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_below="@id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="@string/WifiName"
            android:textColor="@color/font_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWifiName2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="2"
            android:background="@drawable/edittext_input_gray"
            android:gravity="left|center"
            android:paddingLeft="10dip"
            android:textColor="@color/font_color_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll2"
        android:id="@+id/llWifiPassword2"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="@string/WifiPassword"
            android:textColor="@color/font_color_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etWifiPassword2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="2"
            android:background="@drawable/edittext_input_blue"
            android:gravity="left|center"
            android:hint="@string/WifiPassword"
            android:paddingLeft="10dip"
            android:textColor="@color/font_color_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_below="@id/llWifiPassword2"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100" >

        <Button
            android:id="@+id/btnWifiFinsh"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginRight="15dip"
            android:layout_marginLeft="10dp"
            android:layout_weight="40"
            android:background="@drawable/delete_save_btn"
            android:gravity="center"
            android:text="@string/btn_cancel"
            android:textColor="@color/font_color_white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnWifiSave"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="10dp"
            android:layout_weight="40"
            android:background="@drawable/delete_save_btn"
            android:gravity="center"
            android:text="@string/wifiConnect"
            android:textColor="@color/font_color_white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>