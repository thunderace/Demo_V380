<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/serverListItem"
    android:layout_width="fill_parent"
    android:layout_height="120dip"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="115dip"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivAlarmImage"
                android:layout_width="105dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:background="@drawable/device_list_image_bg"
                android:contentDescription="@null"
                android:focusable="false"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/ItemTips"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/clicktoloadimage"
                android:textColor="@color/font_color_red"
                android:textSize="14sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:text="@string/str_alarm_time"
                android:textColor="@color/font_color_black"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/ItemAlarmTime"
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textColor="@color/font_color_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ItemAlarmContent"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                android:paddingLeft="15dp"
                android:textColor="@color/font_color_gray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnAlarmVideo"
                android:layout_width="110dip"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:background="@drawable/delete_save_btn"
                android:gravity="center"
                android:textColor="@color/font_color_black"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/background_gray" />

</LinearLayout>