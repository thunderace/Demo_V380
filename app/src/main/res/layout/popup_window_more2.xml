<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_popup_btn_more"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="-0.5dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ivtop"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:src="@drawable/ivtop" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shadow_test"
            android:gravity="center"
            android:alpha="0.95"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_popup_alarminfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/device_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginBottom="1dp"
                    android:lines="2"
                    android:text="@string/str_popup_window_more1"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#86929B"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/ll_popup_playback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/device_edit" />
                

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:text="@string/str_popup_window_more2"
                    android:textSize="14sp" />
            </LinearLayout>
		<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#86929B"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY" />
           <!--  <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#86929B"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY" /> -->
            <LinearLayout
                android:id="@+id/ll_popup_protect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <ImageView
                    android:id="@+id/iv_defend"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/device_defending" />
                

                <TextView
                    android:id="@+id/tv_defend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="1dp"
                    android:text="@string/str_monitor_activate"
                    android:textSize="14sp" />
            </LinearLayout>
		<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#86929B"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY" />
            <LinearLayout
                android:id="@+id/ll_popup_config"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/device_info" />
                <ImageView
                    android:id="@+id/redpot"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginBottom="13dp"
                    android:visibility="invisible"
                    android:src="@drawable/has_alarm_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginBottom="1dp"
                    android:lines="2"
                    android:text="@string/str_popup_window_more3"
                    android:textSize="14sp" />
            </LinearLayout>

            

      

            
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4.5dp"
             >

            <ImageView
                android:id="@+id/ivdown"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:src="@drawable/ivdown" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>