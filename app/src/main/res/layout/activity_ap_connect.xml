<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/server_bg"
   >
   
      <!-- title-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="45dip" android:gravity="center"
        	android:background="@drawable/background_title">
		
		    <ImageView
		        android:id="@+id/btnAPDeviceBack"
		        android:layout_width="25dip"
		        android:layout_height="25dip"
		        android:contentDescription="@string/desc"
		        android:layout_marginLeft="10dp"
		        android:src="@drawable/back_btn"
		        android:text="@null" />
		    
		    <TextView
		        android:id="@+id/tvConfig"
		        android:layout_width="0dip"
		        android:layout_height="match_parent"
		        android:layout_weight="2"
		        android:background="@null"
		        android:gravity="center"
		        android:text="@string/deviceHotspot"
		        android:textColor="@color/font_color_white"
		        android:textSize="16sp" />

		    <Button
		        android:layout_width="25dip"
		        android:layout_height="25dip"
		        android:layout_marginRight="10dip"
		        android:background="@drawable/netword_save_btn"
		        android:gravity="center"
		        android:text="@string/btn_save"
		        android:textColor="@color/font_color_white"
		        android:textSize="15sp"
		        android:visibility="invisible" />
	
    </LinearLayout>
    
    <!-- 列表-->
   <LinearLayout android:id="@+id/layoutDeviceSelectView" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="match_parent" android:orientation="vertical"  android:background="@drawable/server_bg">
         <ListView android:id="@+id/lvAPDeviceView" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="0dip" android:layout_weight="1" android:layout_marginTop="10dip" />
       <!-- 刷新按钮 -->
         
   <Button android:id="@+id/btnAPDeviceRefresh" android:layout_width="match_parent" android:layout_height="40dip" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginBottom="10dip"
       android:background="@drawable/delete_save_btn" android:text="@string/btn_refresh" android:gravity="center" android:layout_gravity="bottom" android:textColor="@color/font_color_white" android:textSize="16sp" />
   </LinearLayout> 

</LinearLayout>
