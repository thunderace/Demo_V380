<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- titile view -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/background_title"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivBackToHomeActivity"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/str_about_app"
            android:textColor="@color/font_color_white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="35dip"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/iv_about_icon"
            android:layout_width="95dp"
            android:layout_height="95dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/font_color_black"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_ver"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/font_color_black"
            />
        
        <Button 
            android:id="@+id/btn_check_for_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/softwareupdate"
            android:textSize="20sp"
            android:textColor="@color/font_color_black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/check_for_update_bg"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            />
    </LinearLayout>

</LinearLayout>
