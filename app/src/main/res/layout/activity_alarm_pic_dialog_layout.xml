<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alarm_pic_dialog_bg"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="报警设备:"
                android:textColor="#e74c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_alarm_devive_id"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#e74c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_alarm_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2016-12-8 17:26:12"
                android:textColor="#e74c3c"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_close_alarm_pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center_vertical"
                android:contentDescription="@null"
                android:src="@drawable/alarm_pic_dialog_close" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_alarm_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                 />

            <!-- <TextView
                android:id="@+id/tv_alarm_pic_load_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_alarm_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="图片加载失败"
                android:textColor="#585859"
                android:textSize="16sp"
                android:visibility="gone" /> -->

            <ProgressBar
                android:id="@+id/pb_alarm_dialog"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/tv_alarm_pic_double_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双击进入V380"
        android:textSize="16sp"
        android:textColor="@color/font_color_white"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/alarm_pic_double_click_bg"
        />

</LinearLayout>