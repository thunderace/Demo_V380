<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
	<ImageView 
	    android:id="@+id/iv_icon"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:src="@drawable/icon"
	    android:layout_marginTop="20dp"
	    android:layout_centerHorizontal="true"
	    android:visibility="gone"
	    />
	<TextView 
	    android:id="@+id/tv_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/iv_icon"
	    android:gravity="center"
	    android:textSize="20sp"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:textColor="@color/font_color_gray"
	    android:paddingTop="20dp"
	    android:text="@string/str_update_sofeware_title"
	    android:paddingBottom="10dp"
	    />
	
	<TextView 
	    android:id="@+id/tv_title2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/tv_title"
	    android:gravity="center"
	    android:textSize="16sp"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:textColor="@color/software_update_title"
	    android:text="@string/str_software_version"
	    android:visibility="gone"
	    />
	
	<ImageView 
	    android:id="@+id/line"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/font_color_sky_blue"
	    android:layout_below="@+id/tv_title2"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="10dp"
	    android:layout_centerHorizontal="true"
	    android:visibility="visible"
	    />
	
	<TextView 
	    android:id="@+id/tv_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="25dp"
	    android:paddingRight="25dp"
	    android:paddingBottom="15dp"
	    android:layout_marginTop="15dp"
	    android:textColor="@color/software_update_message"
	    android:layout_below="@id/line"
	    android:textSize="16sp"
	    android:text="message"
	    android:gravity="center"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:layout_below="@id/tv_content"
	    android:visibility="visible"
	    android:layout_marginBottom="10dp"
	    android:orientation="horizontal">
	    
	    <Button 
	        android:id="@+id/btn_no"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="5dp"
	        android:text="@string/str_skip_update_soft"
	        android:textSize="16sp"
	        android:background="@drawable/btn_skip"
	        android:textColor="@color/software_update_title"
	        />
	    <Button 
	        android:id="@+id/btn_yes"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="10dp"
	        android:background="@drawable/btn_update"
	        android:text="@string/str_update_soft"
	        android:textSize="16sp"
	        android:textColor="@color/font_color_white"
	        />
	</LinearLayout>
	    
	    
	
</RelativeLayout>
